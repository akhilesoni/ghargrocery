<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".RegisterationActivity">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <ImageView
              android:layout_width="100dp"
              android:layout_height="50dp"
              android:layout_marginStart="5dp"
              android:src="@drawable/logo1"/>
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="190dp"
              android:src="@drawable/bellboy"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/name"
              android:hint="Enter Full Name"
              android:padding="12dp"
              android:layout_marginStart="20dp"
              android:layout_marginEnd="20dp"
              android:layout_marginTop="40dp"
              android:background="@drawable/card_background"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/register_button"
              android:text="Register"
              android:textAlignment="center"
              android:textColor="@android:color/white"
              android:padding="12dp"
              android:layout_marginStart="20dp"
              android:layout_marginEnd="20dp"
              android:layout_marginTop="20dp"
              android:background="@drawable/red_card_background"/>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_gravity="center"
              android:layout_marginTop="20dp">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center">
                  <CheckBox
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/term_check_box"
                      android:layout_toLeftOf="@id/term_condition"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/term_condition"
                      android:text="Terms And Conditions"
                      android:layout_centerVertical="true"
                      android:layout_centerHorizontal="true"
                      />
              </RelativeLayout>
          </LinearLayout>
      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#63000000"
          android:visibility="invisible"
          android:id="@+id/tint"/>
      <android.support.v7.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:visibility="invisible"
          app:cardCornerRadius="8dp"
          android:id="@+id/notice_card">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/notice_text"
              android:text="notice"
              android:visibility="invisible"
              android:layout_gravity="center"
              android:layout_marginStart="20dp"
              android:layout_marginEnd="20dp"/>
          <ProgressBar
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginStart="20dp"
              android:layout_marginEnd="20dp"
              android:visibility="invisible"
              android:id="@+id/progressBar"/>
      </android.support.v7.widget.CardView>
  </RelativeLayout>
</LinearLayout>