<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="upload product"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:id="@+id/upload_title"
                />

            <EditText
                android:id="@+id/upload_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="product name"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/card_background"/>



            <EditText
                android:id="@+id/upload_prize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="product prize"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_below="@id/upload_name"
                android:background="@drawable/card_background"/>
            <EditText
                android:id="@+id/upload_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="product weight"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/card_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="select category"
                android:layout_margin="10dp"/>
            <Spinner
                android:id="@+id/upload_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_weight"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:background="@drawable/card_background"
                />

            <ImageView
                android:id="@+id/upload_image_view"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="183dp"
                android:src="@drawable/card_background" />

            <Button
                android:id="@+id/upload_choose_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="choose Image"
                android:layout_marginTop="10dp"
                android:background="@drawable/red_card_background"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/upload_upload_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="upload product"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:background="@drawable/red_card_background"
                android:textStyle="bold" />
        </LinearLayout>


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/progressBar"
            android:visibility="invisible"/>
    </RelativeLayout>

</LinearLayout>